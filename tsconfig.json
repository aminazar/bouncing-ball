{
  "compilerOptions": {
    "module": "ES2015",
    "moduleResolution": "Node",
    "target": "ES6",
    "outDir": "./dist",
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    // strict checks
    "strict": true,
    // linter checks
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false
  },
  "include": [
    "./src/**/*",
    "./jest.config.ts"
  ],
  "exclude": [
    "./src/*.test.js",
    "./src/**/*.test.js"
  ],
  "lib": [
    "es2016",
    "dom"
  ]
}
